# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/talk_to_folder

# Google OAuth
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Fireworks AI - for embeddings and reranking
# Get API key from https://fireworks.ai/
FIREWORKS_API_KEY=your-fireworks-api-key

# Anthropic - for Claude generation
# Get API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key

# Mistral - for PDF OCR
# Get API key from https://console.mistral.ai/
MISTRAL_API_KEY=your-mistral-api-key

# Security
SECRET_KEY=generate-a-secure-random-string-here
SESSION_EXPIRE_HOURS=24

# Frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000"]
